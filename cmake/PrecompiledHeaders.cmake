FUNCTION(SET_PRECOMPILED_HEADER target pch_header pch_source)
	IF(WIN32)
		SET_TARGET_PROPERTIES(${target} PROPERTIES COMPILE_FLAGS "/Yu\"${pch_header}\"")
		SET_SOURCE_FILES_PROPERTIES(${pch_source} PROPERTIES COMPILE_FLAGS "/Yc\"${pch_header}\"")
    GET_TARGET_PROPERTY(compile_definitions ${target} COMPILE_DEFINITIONS)
    SET_TARGET_PROPERTIES(${target} PROPERTIES COMPILE_DEFINITIONS ${compile_definitions} PRECOMPILED)
	ENDIF(WIN32)
ENDFUNCTION(SET_PRECOMPILED_HEADER)
